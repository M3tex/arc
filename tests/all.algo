# Ce programme fait la démonstration de toutes les fonctionnalités
# actuellement supportées par l'ASA


/* Déclaration de variables globales */
VAR toto <- 5 * 3 + 2, titi <- 4
VAR tutu <- 1

/* Déclaration de fonction */
ALGO foo(a, b)
VAR res <- 0, tmp <- 1
DEBUT
    TQ a > 0 ET b > 0 FAIRE
        SI a % 2 = 1 ET b % 2 = 1 ALORS
            res <- res + 1 * tmp
        FSI
        a <- a / 2
        b <- b / 2
        tmp <- tmp * 2
    FTQ

    /* ToDo: retourner res */
FIN


/* Autre variable globale */
VAR tata <- tutu


/* Autre fonction */
ALGO bar()
DEBUT
    TQ tata > 0 FAIRE
        SI tata % 2 = 0 ALORS
            tata <- tata / 2
        SINON
            tata <- tata - 1
        FSI
    FTQ
FIN



/* Programme principal */
PROGRAMME()
VAR tutu, x
DEBUT
    x <- 5 * (3 + 1) / (10 - 8)
    tutu <- foo(x, 2)
    toto <- titi * 2 + x
    # NON 10
FIN 
